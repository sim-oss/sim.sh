    "version": "0.2.0",
    "configurations": [
        {
            "name": "Edge",
            "type": "edge",
            "request": "launch",
            "url": "http://localhost/"
        },
        {
            "name": "Edge with xDebug",
            "type": "edge",
            "request": "launch",
            "url": "http://xdebug.localhost/"
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            // server -> local
            "pathMappings": {
                "/var/www/app": "${workspaceRoot}/app"
            },
            "ignore": ["**/vendor/**/*.php"]
        },
        {
            "name": "Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/",
            "webRoot": "/"
        },
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost/",
            "webRoot": "/"
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}
